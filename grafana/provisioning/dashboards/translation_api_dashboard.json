{
    "id": null,
    "title": "Translation API Dashboard",
    "timezone": "browser",
    "editable": true,
    "panels": [
        {
            "type": "stat",
            "title": "Total Requests",
            "id": 1,
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "sum(translation_api_requests_total)",
                    "legendFormat": "All Endpoints",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "color": {
                        "mode": "palette-classic"
                    }
                },
                "overrides": []
            },
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "sum"
                    ],
                    "fields": "",
                    "values": false
                }
            },
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 0,
                "y": 0
            }
        },
        {
            "type": "graph",
            "title": "Requests per Endpoint Over Time",
            "id": 2,
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "rate(translation_api_requests_total[1m])",
                    "legendFormat": "{{endpoint}}",
                    "refId": "A"
                }
            ],
            "gridPos": {
                "h": 9,
                "w": 24,
                "x": 0,
                "y": 4
            }
        }
    ],
    "schemaVersion": 37,
    "version": 1,
    "refresh": "10s",
    "annotations": {
        "list": [
            {
                "builtIn": 1,
                "type": "dashboard",
                "name": "Annotations & Alerts",
                "enable": true
            }
        ]
    },
    "templating": {
        "list": []
    },
    "time": {
        "from": "now-6h",
        "to": "now"
    },
    "timepicker": {
        "refresh_intervals": [
            "5s",
            "10s",
            "30s",
            "1m",
            "5m",
            "15m"
        ]
    }
}
